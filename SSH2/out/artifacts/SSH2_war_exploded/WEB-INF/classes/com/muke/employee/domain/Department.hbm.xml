<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.njust.employee.domain.Department" table="department">
		<id name="did" column="did">
			<generator class="native"/>
		</id>
		<property name="dname" column="dname" length="20"></property>
		<property name="ddesc" column="ddesc" length="30"></property>

		<!--关联规则的设定-->
		<set name="employees">
			<key column="dno"/>
			<one-to-many class="com.njust.employee.domain.Employee"/>
		</set>
	</class>
</hibernate-mapping>